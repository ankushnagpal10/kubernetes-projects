pipeline {
    agent any
environment {
        DOCKER_IMAGE = 'ankushnagpal10/wordpress-nginx:v1'  // Docker image name and tag
        //KUBECONFIG = '~/.kube/config'  // Path to the kubeconfig file (adjust as needed)
        CLUSTER_NAME = 'my-kind-cluster'
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ankushnagpal10/kubernetes-projects'
            }
        }
        stage('Docker Build and Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker_cred') {
                        dir('04-wordpress-deployment/Docker') {
                            sh 'docker build -t $DOCKER_IMAGE .'
                            sh ' docker push $DOCKER_IMAGE'
                        }
                    }
                }
            }
        }
        stage('Set up KIND Cluster') {
            steps {
                script {
                    // Ensure KIND and kubectl are installed
                    sh 'kind version'
                    sh 'kubectl version --client'
                    sh 'pwd'
                    // Create or use an existing KIND cluster
                    sh 'kind create cluster --config 04-wordpress-deployment/kind-cluster-config.yaml --name ${CLUSTER_NAME} || true' // Skip if already exists
                }
            }
        }
        stage('Deploy to KIND Cluster') {
            steps {
                script {
                    dir('04-wordpress-deployment/') {
                        echo 'Deploying to KIND Cluster...'
                        sh '''
                        kubectl cluster-info --context kind-${CLUSTER_NAME}
                        kubectl create ns wordpress || true
                        kubectl apply -f secret.yaml
                        kubectl apply -f nginx-cm.yaml
                        kubectl apply -f mysql-cm.yaml
                        kubectl apply -f mysql.yaml
                        kubectl apply -f wordpress.yaml
                        kubectl apply -f networkpolicy.yaml
                        '''
                        sh 'kubectl get pods -n wordpress'
                        sh 'kubectl wait --for=condition=ready pod -l app=wordpress --timeout=90s -n wordpress'
                        sh 'kubectl port-forward service/wordpress-service 3000:80 -n wordpress > /dev/null 2>&1 &'
                    }
                }
            }
        }
    } 
    post {
        always {
            script {
                echo "Cleaning up KIND cluster..."
                sh "kind delete cluster --name ${CLUSTER_NAME}"
            }
        }
    }
}
